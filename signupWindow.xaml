<Window x:Class="Hotel.signupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inscription Administrateur" Height="500" Width="800"
        Background="White">
    <Window.Resources>
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <!-- Green background for the main button -->
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#F4F4F4"/>
            <!-- Light grey background for textboxes -->
            <Setter Property="BorderBrush" Value="#D1D1D1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#F4F4F4"/>
            <Setter Property="BorderBrush" Value="#D1D1D1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <!-- Light grey background for secondary button -->
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Title Fields -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBox x:Name="NomTextBox" Width="300" Margin="10" Text="Nom"/>
            <TextBox x:Name="PrenomTextBox" Width="300" Margin="10" Text="Prénom"/>
            <TextBox x:Name="EmailTextBox" Width="300" Margin="10" Text="Email"/>
            <TextBox x:Name="TelephoneTextBox" Width="300" Margin="10" Text="Téléphone"/>

            <!-- PasswordBox with placeholder -->
            <PasswordBox x:Name="PasswordBox" Width="300" Height="30" VerticalAlignment="Top" Margin="10"/>

            <!-- Signup Button -->
            <Button Content="S'inscrire" Width="150" Height="40"
                    HorizontalAlignment="Center" FontSize="14" FontWeight="Bold"
                    Style="{StaticResource MainButtonStyle}"
                    Click="SignupButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
