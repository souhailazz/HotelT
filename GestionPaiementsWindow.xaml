<Window x:Class="Hotel.GestionPaiementsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Paiements" Height="500" Width="800" Background="#FFFFFF">
    <Window.Resources>
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="black"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#0078D7"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="black"/>
            <Setter Property="Background" Value="#F9F9F9"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="black"/>
            <Setter Property="Background" Value="#F9F9F9"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Foreground" Value="black"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="RowBackground" Value="#F9F9F9"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <DataGrid x:Name="PaiementsDataGrid" 
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Top" 
                  Height="250"
                  AutoGenerateColumns="True" 
                  SelectionChanged="PaiementsDataGrid_SelectionChanged" />

        <Grid>
            <TextBox x:Name="PaymentCodeTextBox" 
                     HorizontalAlignment="Left" 
                     Margin="10,270,0,0" 
                     Width="200"
                     VerticalAlignment="Top"/>
            <TextBlock Text="Payment Code" 
                       Margin="10,254,5,0" 
                       VerticalAlignment="Top" 
                       Foreground="black"/>
        </Grid>

        <Grid Margin="-10,-6,10,6">
            <TextBox x:Name="TotalTextBox" 
                     HorizontalAlignment="Left" 
                     Margin="225,275,0,0" 
                     Width="200"
                     VerticalAlignment="Top" />
            <TextBlock Text="Total Amount" 
                Margin="225,259,0,0" 
                VerticalAlignment="Top" 
                Foreground="black"/>
            <TextBox x:Name="SearchPaymentCodeTextBox" 
                HorizontalAlignment="Left" 
                Margin="225,405,0,0" 
                Width="200"
                VerticalAlignment="Top" TextChanged="SearchPaymentCodeTextBox_TextChanged" />
            <TextBlock Text="search by payment code" 
                Margin="225,384,0,0" 
                VerticalAlignment="Top" 
                Foreground="black"/>
        </Grid>

        <ComboBox x:Name="PaymentMethodComboBox" 
                  HorizontalAlignment="Left" 
                  Margin="430,270,0,0" 
                  Width="200"
                  VerticalAlignment="Top">
            <ComboBoxItem Content="Cash" />
            <ComboBoxItem Content="Card" />
        </ComboBox>

        <Button Content="Add Payment" 
                Style="{StaticResource MainButtonStyle}"
                HorizontalAlignment="Left" 
                Margin="10,320,0,0" 
                VerticalAlignment="Top"
                Width="120" 
                Click="AddPaymentButton_Click" />
        <Button Content="Update Payment" 
                Style="{StaticResource MainButtonStyle}"
                HorizontalAlignment="Left" 
                Margin="140,320,0,0" 
                VerticalAlignment="Top"
                Width="120" 
                Click="UpdatePaymentButton_Click" />
        <Button Content="Delete Payment" 
                Style="{StaticResource MainButtonStyle}"
                HorizontalAlignment="Left" 
                Margin="270,320,0,0" 
                VerticalAlignment="Top"
                Width="120" 
                Click="DeletePaymentButton_Click" />
        
    </Grid>
</Window>
